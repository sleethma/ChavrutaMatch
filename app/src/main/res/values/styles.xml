<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_background_color">@color/ak_background</item>
        <item name="com_accountkit_text_color">@color/ak_text</item>
        <item name="com_accountkit_button_background_color">@color/ak_buttonBackground</item>
        <item name="com_accountkit_button_pressed_background_color">
            @color/ak_buttonPressedBackground
        </item>
        <item name="com_accountkit_button_text_color">@color/ak_buttonText</item>
        <item name="com_accountkit_input_background_color">@color/ak_inputBackground</item>
        <item name="com_accountkit_input_text_color">@color/ak_inputText</item>
        <item name="com_accountkit_status_bar_color">@color/ak_statusBar</item>
        <item name="com_accountkit_icon_color">@color/ak_icon</item>
    </style>

    <style name="AddBioEditTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:labelTextSize">16sp</item>
        <item name="android:textColorHint">#BF0409</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="AddBioTextInputLayoutStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextBackShadow">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">#6b6d6d</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

</resources>
